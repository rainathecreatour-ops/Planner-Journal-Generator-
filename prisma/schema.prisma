generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AccessCode {
  id        String   @id @default(cuid())
  codeHash  String   @unique
  plan      String   @default("pro") // free|pro|studio
  maxUses   Int      @default(1)
  uses      Int      @default(0)
  expiresAt DateTime?
  note      String?  // optional: "Gumroad order #123"
  createdAt DateTime @default(now())
  sessions  Session[]
}

model Session {
  id           String     @id @default(cuid())
  accessCodeId String
  accessCode   AccessCode @relation(fields: [accessCodeId], references: [id])
  createdAt    DateTime   @default(now())
  lastSeenAt   DateTime   @default(now())
}

model Project {
  id           String   @id @default(cuid())
  sessionId    String
  type         String   // planner|journal
  title        String
  settings     Json
  blueprint    Json?
  imagePrompts Json?
  status       String   @default("draft") // draft|generated
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
